<!DOCTYPE html>
<html lang="es">

<head>
    <%- include("./partials/head") %>
</head>

<body>
    <header id="top"><%- include("./partials/header") %></header>
    <nav id="main-nav">
        <ul class="nav flex-column">
            <a class="restyled-link" href="#top">
                <li class="nav-item">
                    <i class="far fa-caret-square-up"></i>
                    <span class="nav-link">Volver arriba</span>
                </li>
            </a>
            <a class="restyled-link" href="#main">
                <li class="nav-item">
                    <i class="fas fa-chalkboard-teacher"></i>
                    <span class="nav-link"><%= logged?"Tus clases":"Ingresá" %></span>
                </li>
            </a>
            <a class="restyled-link" href="#sobre-nosotros">
                <li class="nav-item">
                    <i class="fas fa-child"></i>
                    <span class="nav-link">Sobre nosotros</span>
                </li>
            </a>
            <a class="restyled-link" href="#comentarios">
                <li class="nav-item">
                    <i class="far fa-comments"></i>
                    <span class="nav-link">Comentarios</span>
                </li>
            </a>
            <a class="restyled-link" href="#contacto">
                <li class="nav-item">
                    <i class="far fa-paper-plane"></i>
                    <span class="nav-link">Contactate</span>
                </li>
            </a>
        </ul>
    </nav>
    <main id="home" class="container-fluid">
        <div id="main">
            <section class="row">
                <% if(!logged) { %>

                <article class="col-12 col-md-6 cursos-main padding-10">
                    <div class="clases-main-container padding-10">
                        <p class="pt-3  fw-bolder">¿No tenés cuenta?</p>
                        <h2 class="">Registrate</h2>
                        <div class=" bg-shadow-pill padding-10">
                            <form class="padding-10" action="/register" method="post">
                                <div class="form-floating my-3">
                                    <input class="form-control" type="text" name="userName" id="userName"
                                        placeholder="Nombre de usuario" />
                                    <label class="text-shadow" for="userName">Nombre de usuario</label>
                                </div>
                                <div class="form-floating my-3">
                                    <input class="form-control" type="email" name="userEmail" id="userEmail"
                                        placeholder="Nombre de usuario" />
                                    <label class="text-shadow" for="userEmail">Correo electrónico</label>
                                </div>
                                <div class="form-floating my-3">
                                    <input class="form-control" type="password" name="userPassword" id="userPassword"
                                        placeholder="Contraseña" />
                                    <label class="text-shadow" for="userPassword">Contraseña</label>
                                </div>
                                <button class="ms-primary-btn " type="submit">
                                    Registrarse
                                </button>
                            </form>
                        </div>
                    </div>
                </article>
                <article class="col-12 col-md-6 cursos-main padding-10">
                    <div class="clases-main-container padding-10">
                        <p class="pt-3  fw-bolder">¿Ya tenés cuenta?</p>
                        <h2 class="">Ingresá</h2>
                        <div class=" bg-shadow-pill padding-10">
                            <form class="padding-10" action="/login" method="post">
                                <div class="form-floating my-3">
                                    <input class="form-control" type="text" name="userName" id="userName"
                                        placeholder="Nombre de usuario" />
                                    <label class="text-shadow" for="userName">Nombre de usuario</label>
                                </div>
                                <div class="form-floating my-3">
                                    <input class="form-control" type="password" name="userPassword" id="userPassword"
                                        placeholder="Contraseña" />
                                    <label class="text-shadow" for="userPassword">Contraseña</label>
                                </div>
                                <button class="ms-primary-btn " type="submit">
                                    Ingresar
                                </button>
                            </form>
                        </div>
                </article>
                <% } else { %>
                <h1>Hola usuario, hoy es un buen dia para hacer random</h1>
                <article class="col-12 col-md-6 cursos-main padding-10">
                    <div class="clases-main-container">
                        <h2 class="padding-10">Cursos actuales</h2>
                        <% for(let clase of clasesActuales){ %>
                        <a class="clases-main-item" href="/products/<%= clase.id %> ">
                            <img class="padding-10 img-thumbnail" src="/img/clases-preview/<%= clase.preview %> "
                                alt="<%= clase.titulo %> " />
                            <h4 class="padding-10"><%= clase.titulo %></h4>
                        </a>
                        <% } %>
                    </div>
                </article>
                <article class="col-12 col-md-6 cursos-main padding-10">
                    <div class="clases-main-container">
                        <h2 class="padding-10">Mi colección</h2>
                        <% for(let clase of clasesActuales){ %>
                        <a href="/products/<%= clase.id %> ">
                            <div class="clases-main-item">
                                <img class="padding-10 img-thumbnail" src="/img/clases-preview/<%= clase.preview %> "
                                    alt="<%= clase.titulo %> " />
                                <h4 class="padding-10">
                                    <%= clase.titulo %>
                                </h4>
                            </div>
                        </a>
                        <% } %>
                    </div>
                </article>
                <% } %>


                <article class="col-12 col-md-6 cursos-main padding-10">
                    <div class="clases-main-container">
                        <h2 class="padding-10">Sugerencias</h2>
                        <% for(let clase of recommendations){ %>
                        <a class="clases-main-item" href="/products/<%= clase.id %> ">
                            <img class="padding-10 img-thumbnail" src="/img/clases-preview/<%= clase.preview %> "
                                alt="<%= clase.titulo %> " />
                            <h4 class="padding-10"><%= clase.titulo %></h4>
                        </a>
                        <% } %>
                    </div>
                </article>
                <article class="col-12 col-md-6 cursos-main padding-10">
                    <div id="otros-cursos" class="clases-main-container">
                        <h2 class="padding-10">Otros cursos</h2>
                        <% for(let clase of clases){ %>
                        <a class="restyled-link" href="/products/<%= clase.id %> ">
                            <div class="other-clases">
                                <%= clase.titulo %>
                            </div>
                        </a>
                        <% } %>
                        <a class="restyled-link" href="/products">
                            <div class="other-clases">Más cursos</div>
                        </a>
                    </div>
                </article>
            </section>
            <section class="row" id="sobre-nosotros">
                <article class="col-12 cursos-main">
                    <div class="clases-main-container">
                        <h2 class="padding-10">Sobre nosotros</h2>
                        <p class="padding-10">
                            Mundo Sapien es un market place donde docentes
                            pueden ofrecer clases sobre distintos temas de
                            la curricula escolar. Pensado para alumnos del
                            nivel primario (de 6 a 12 años) se buscará una
                            interacción atractiva y sencilla para los niños
                            así como la posibilidad de crear una colección
                            personal de cursos adquiridos por pago directo o
                            suscripción.
                        </p>
                    </div>
                </article>
            </section>
            <section class="row" id="comentarios">
                <article class="col-12 col-md-6 cursos-main padding-10">
                    <div class="clases-main-container padding-10">
                        <h2 class="padding-10">Comentarios</h2>
                        <% for(let comentario of comentarios){ %>
                        <div class="users-comment padding-10">
                            <p class="padding-10">
                                <%= comentario.resena %>
                            </p>
                            <p class="padding-10">
                                <%= comentario.nombre %>
                            </p>
                        </div>
                        <% } %>
                    </div>
                </article>
                <article class="col-12 col-md-6 cursos-main padding-10">
                    <div class="clases-main-container">
                        <h2 class="padding-10">Deja tu comentario</h2>
                        <form class="padding-10" action="" method="post">
                            <div class="form-floating">
                                <input class="form-control" type="text" name="nombre" id="nombre"
                                    placeholder="nombre" />
                                <label for="nombre">Nombre</label>
                            </div>
                            <div class="form-floating">
                                <textarea class="form-control" name="comentario" id="comentario"
                                    placeholder="comentario"></textarea>
                                <label for="comentario">Comentario</label>
                            </div>
                        </form>
                    </div>
                </article>
            </section>
            <section class="row" id="contacto">
                <article class="col-12 col-md-6 cursos-main">
                    <div class="clases-main-container">
                        <h2 class="padding-10">Quiero saber más</h2>
                        <form class="padding-10" action="" method="post">
                            <div class="form-floating">
                                <input class="form-control" type="text" name="nombre" id="nombre"
                                    placeholder="nombre" />
                                <label for="nombre">Nombre</label>
                            </div>
                            <div class="form-floating">
                                <input class="form-control" type="email" name="email" id="email" placeholder="email" />
                                <label for="email">Correo electrónico</label>
                            </div>
                            <div class="form-floating">
                                <textarea class="form-control" name="consulta" id="consulta"
                                    placeholder="consulta"></textarea>
                                <label for="consulta">Consulta</label>
                            </div>
                        </form>
                    </div>
                </article>
            </section>
        </div>
    </main>
    <%- include("./partials/footer") %>
</body>

</html>