<!DOCTYPE html>
<html lang="es">

<head>
    <%- include("./partials/head") %>
</head>

<body>
    <header><%- include("./partials/header") %></header>
    <main class="container-fluid">
        <div class="row max1200px padding-10 z-index-1">
            <div class="cursos-main padding-10">
                <section class="d-flex flex-wrap">
                    <% for(let product of products){ %>
                    <article class="col-12 col-md-3">
                        <div class="clases-main-container m-1">
                            <a class="restyled-link clases-main-item" href="/products/<%= product.id %>">
                                <div class="
                                            d-flex
                                            flex-column
                                            product-in-products-page
                                        ">
                                    <div class="
                                                m-1
                                                product-in-products-page-detail
                                            ">
                                        <img class="img-thumbnail padding-10"
                                            src="/img/clases-preview/<%=product.preview%>" alt="picture placeholder" />
                                        <div class="padding-10">
                                            <h5>
                                                <%= product.titulo + " en "
                                                    + product.materia %>
                                            </h5>
                                            <h5><%=product.grado %></h5>
                                            <h5>
                                                <%=product.profesorNombre +
                                                    " " +
                                                    product.profesorApellido %>
                                            </h5>
                                            <div>
                                                <% let stars=0; for(let i=0;
                                                    i <
                                                    Math.floor(product.rating);
                                                    i++){ stars++; %>
                                                <i class="fas fa-star"></i>
                                                <% } %> <% if(product.rating
                                                    % 1 !=0) { stars++; %>
                                                <i class="
                                                            fas
                                                            fa-star-half-alt
                                                        "></i>
                                                <% } %> <% for(let i=0; i <
                                                    5 - stars ; i++){ %>
                                                <i class="far fa-star"></i>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="
                                                price-and-options
                                                bg-shadow-pill
                                                align-self-end
                                                text-end
                                            ">
                                        <h3 class="padding-10">
                                            <%="$" +
                                                product.precio.toFixed(2) %>
                                        </h3>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </article>
                    <% } %>
                </section>
            </div>
        </div>
    </main>
    <%- include("./partials/footer") %>
</body>

</html>